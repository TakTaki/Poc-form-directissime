{% extends 'base.html.twig' %}

{% block title %}Formulaire{% endblock %}

{% block body %}
    <script src="javascript/add-collection-widget.js"></script>
    <h1>MyForm</h1>
    {{ form_start(form) }}
    {{ form_row(form._token) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.name) }}
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(form.siret) }}
        </div>
        <div class="add-another-collection-widget">
            {{ form_row(form.users.vars.prototype) }}
        </div>
        <button type="submit" class="btn">Valider</button>
    </div>
{% endblock %}
